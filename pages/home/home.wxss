/* pages/home/home.wxss */

.swipe {
  width: 100%;
  height: 400rpx;
}

.slide_img {
  width: 100%;
  height: 100%;
}

.home {
  margin: 0;
  padding: 0;
  background: #f4f4f4;
  display: flex;
  flex-direction: column;
}

.view_content {
  display: flex;
  flex-direction: row;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 4px;
  margin-bottom: 4px;
  background-color: #fff;
  /* border-width: 2px;
  border-color: #2e3135;
  border-style: solid;
  border-radius: 3px; */
  padding-top: 6px;
  padding-bottom: 6px;
  padding-left: 12px;
  padding-right: 12px;
  box-shadow: 1rpx 2rpx 2rpx 2rpx #bfbfbf;
  border-radius: 3px;
}

.view_left {
  display: flex;
  flex-direction: column;
}

.view_right {
  display: flex;
  flex-direction: column;
  height: 100rpx;
  width: 100rpx;
}

.view_classify {
  display: flex;
  flex-direction: row;
  align-items: center; /*垂直居中*/
}

.img_photo {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 6px;
  margin-right: 4px;
}

.text_title {
  font-size: 16px;
  color: #2e3135;
  margin-top: 6px;
}

.text_desc {
  font-size: 13px;
  color: #545c63;
  margin-top: 6px;
}

.text_classify {
  font-size: 12px;
  margin-top: 6px;
  color: #999;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}
