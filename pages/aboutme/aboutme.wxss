/* pages/aboutme/aboutme.wxss */

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.view_top {
  background-color: #00abff;
  width: 100%;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_top .img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}

.text_name {
  font-size: 18px;
  color: #fff;
  margin-top: 10rpx;
}

.view_center {
  background-color: #f2f2f2;
  padding-top: 28rpx;
  display: flex;
  flex-direction: column;
}

.view_item {
  background-color: #fff;
  line-height: 44px;
  height: 44px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view_lable {
  color: #545454;
  font-size: 14px;
  flex: 1;
  float: left;
  margin-left: 22rpx;
}

.keyImage {
  margin-left: 22rpx;
  width: 20px;
  height: 20px;
}

.img_arrow {
  width: 20px;
  height: 20px;
  margin-right: 22rpx;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
}

.btn {
  background: none;
  border: none;
  color: #fff;
}

.btn::after {
  border: none;
}
